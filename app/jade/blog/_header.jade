//Header
header.blog_header.clearfix
	nav.navbar.navbar-default(role='navigation')
		.container
			// LOGO
			a.navbar-brand.logo_container(href='#')
				img(src="images/header/avatar.png" alt="header__person-photo")
				h1.header__person-name #{user.name} #{user.sname}
			// MOBILE MENU
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
					span.icon-bar
					span.icon-bar
					span.icon-bar
			// DESKTOP MENU
			#bs-example-navbar-collapse-1.collapse.navbar-collapse
				ul.nav.navbar-nav.navbar-right.menu
					- each item in menuLink
						li: a(href= item.link) #{item.name}
			// /.navbar-collapse